# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Chainlit Authentication (required for chat history sidebar)
# Generate using: chainlit create-secret
CHAINLIT_AUTH_SECRET=your_chainlit_auth_secret_here

# Optional: Directory Configuration
# DATA_DIR=./data
# STORAGE_DIR=./storage

# Optional: Model Configuration
# MODEL_NAME=gpt-4o
# TEMPERATURE=0
# EMBEDDING_MODEL=BAAI/bge-small-en-v1.5

# Optional: Chat History Configuration
# ENABLE_CHAT_HISTORY=true
# MAX_CHAT_HISTORY=50
# CHAT_STORAGE_DIR=./chat_history

# Optional: Force index rebuild (set to "true" to rebuild)
# REBUILD_INDEX=false
